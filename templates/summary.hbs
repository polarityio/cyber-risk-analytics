
{{#if details.body.total_entries}}
  <span {{on "click" (optional this.scrollToIntegration)}} class="integration-summary-tag integration-background-color integration-border-color">
    <span class="acronym integration-text-bold-color">{{block.acronym}}</span>
    <span class="integration-text-color">Total Breaches: {{details.body.total_entries}}</span>
  </span>
{{/if}}

{{#if details.severity}}
  <span {{on "click" (optional this.scrollToIntegration)}} class="integration-summary-tag integration-background-color integration-border-color">
    <span class="acronym integration-text-bold-color">{{block.acronym}}</span>
    <span class="integration-text-color">{{details.severity}}</span>
  </span>
{{/if}}

{{#if emails}}
  {{#each emails as |category|}}
  <span {{on "click" (optional this.scrollToIntegration)}} class="integration-summary-tag integration-background-color integration-border-color">
    <span class="acronym integration-text-bold-color">{{block.acronym}}</span>
    <span class="integration-text-color">{{category.status}}</span>
  </span>
  {{/each}}
{{/if}}
